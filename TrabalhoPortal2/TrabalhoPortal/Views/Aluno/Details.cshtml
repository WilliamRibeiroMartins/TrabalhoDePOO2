@model Portal.Models.Aluno

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.matricula)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.matricula)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cpf)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpf)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.curso.nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.curso.nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dataNascimento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dataNascimento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

    </dl>
</div>
<div>
    <h4>Disciplinas</h4>
    <table>
        @foreach (var item in Model.disciplinas)
        {
          <tr>

                <th>
                    @Html.DisplayFor(modelItem => item.nome) | @Html.ActionLink("Desassociar", "Desassociar", new { coddisciplina = item.coddisciplina, codaluno = Model.codaluno })
                </th>

            </tr>

        }

      </table>
</div>
<div>
    <hr />
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.codaluno }) |
        @Html.ActionLink("Voltar", "Index")
    </p>
</div>