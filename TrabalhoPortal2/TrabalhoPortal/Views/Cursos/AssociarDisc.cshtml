@model Portal.Models.ViewCursoDisciplina

@{
    ViewBag.Title = "Associar Disciplina";
}

<h2>Associar Disciplina</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Curso</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.curso.codcurso)

        <div class="form-group">
            <label class="control-label col-md-2" for="disciplina_nome">Nome</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.curso.nome, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="disciplina_nome">Disciplina</label>
            <div class="col-md-10"> 
                <select name="coddisciplina">
                    @foreach (var disciplina in Model.disciplinas)
                    {
                    <option value="@disciplina.coddisciplina">@disciplina.nome</option>
                    }
                </select>
            </div>
         </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
