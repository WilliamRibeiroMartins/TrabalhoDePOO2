@model Portal.Models.ViewEditDisciplina

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Disciplina</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.disciplina.coddisciplina)

        <div class="form-group">
            <label class="control-label col-md-2" for="disciplina_nome">Nome</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.disciplina.nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.disciplina.nome, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="disciplina_nome">Professor</label>
            <div class="col-md-10"> 
                <select name="Professor">
                    @foreach (var professor in Model.professores)
                    {
                    <option value="@professor.codprofessor">@professor.nome</option>
                    }
                </select>
            </div>
         </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
