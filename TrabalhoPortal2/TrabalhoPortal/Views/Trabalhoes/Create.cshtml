@model Portal.Models.ViewCadastroTrabalho

@{
    ViewBag.Title = "Novo Trabalho";
}

<h2>Novo Trabalho</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    

        <h4>Trabalho</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-2" for="trabalho_nome">Disciplina</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" data-val="true" data-val-required="O campo nome é obrigatório." readonly id="disciplina_nome" name="disciplina.nome" type="text" value="@Html.DisplayFor(Model => Model.disciplina.nome) ">
                    <span class="field-validation-valid text-danger" data-valmsg-for="disciplina.nome" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="trabalho_nome">id</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" data-val="true" data-val-required="O campo nome é obrigatório." readonly id="disciplina_coddisciplina" name="disciplina.coddisciplina" type="text" type="hidden" value="@Html.DisplayFor(Model => Model.disciplina.coddisciplina) ">
                    <span class="field-validation-valid text-danger" data-valmsg-for="disciplina.nome" data-valmsg-replace="true"></span>
                </div>
            </div>
        
            <div class="form-group">
                @Html.LabelFor(model => model.trabalho.nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.trabalho.nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.trabalho.nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.trabalho.DataLimite, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.trabalho.DataLimite, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.trabalho.DataLimite, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Voltar", "Portal", "Professor")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
